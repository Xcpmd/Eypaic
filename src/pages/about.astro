---
import Layout from '../layouts/Layout.astro';
import aboutCSS from '../styles/about.css?raw';
import '../styles/about.css';
import '../styles/global.css';
import { Image } from 'astro:assets';
import { siteConfig, profileConfig } from '../config';
import avatarImage from '../assets/avatar.jpg';
---

<Layout title="关于" description="关于我">
  <main class="about-main">
    <div class="container">
      <div class="about-content">
        <div class="about-header">
          <h1 class="about-title">关于我</h1>
        </div>

        <div class="about-body">
          <div class="about-card base-card">
            <div class="about-profile">
              <div class="about-avatar">
                {profileConfig.avatar ? (
                  <Image 
                    src={avatarImage} 
                    alt={profileConfig.name || '博主'}
                    width={120}
                    height={120}
                  />
                ) : (
                  <div class="avatar-placeholder">{(profileConfig.name || '博主').charAt(0)}</div>
                )}
              </div>
              <div class="about-info">
                <h2 class="about-name">{profileConfig.name || '博主'}</h2>
                <p class="about-bio">{profileConfig.bio || '热爱技术，喜欢分享'}</p>
                <div class="about-location">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                    <circle cx="12" cy="10" r="3"></circle>
                  </svg>
                  <span>{profileConfig.location || '地球'}</span>
                </div>
              </div>
            </div>

            <div class="about-description">
              <h3>个人简介</h3>
              <p>
                欢迎来到我的博客！我是一名{profileConfig.occupation || '开发者'}，热爱编程和技术分享。
                在这里，我会记录我的学习笔记、技术心得和生活感悟。
              </p>
              <p>
                我主要关注{profileConfig.interests || 'Web开发、人工智能和软件工程'}等领域。
                如果你对我的文章有任何疑问或建议，欢迎通过下面的联系方式与我交流。
              </p>
            </div>

            <div class="about-skills">
              <h3>技能栈</h3>
              <div class="skills-grid">
                {profileConfig.skills && profileConfig.skills.length > 0 ? 
                  profileConfig.skills.map((skill, index) => (
                    <div class="skill-item" key={index}>
                      <div class="skill-name">{skill.name}</div>
                      <div class="skill-level">
                        <div class="skill-bar" style={`width: ${skill.level}%`}></div>
                      </div>
                    </div>
                  )) : (
                  <>
                    <div class="skill-item">
                      <div class="skill-name">HTML/CSS</div>
                      <div class="skill-level">
                        <div class="skill-bar" style={`width: 90%`}></div>
                      </div>
                    </div>
                    <div class="skill-item">
                      <div class="skill-name">JavaScript</div>
                      <div class="skill-level">
                        <div class="skill-bar" style={`width: 85%`}></div>
                      </div>
                    </div>
                    <div class="skill-item">
                      <div class="skill-name">TypeScript</div>
                      <div class="skill-level">
                        <div class="skill-bar" style={`width: 80%`}></div>
                      </div>
                    </div>
                    <div class="skill-item">
                      <div class="skill-name">React/Vue</div>
                      <div class="skill-level">
                        <div class="skill-bar" style={`width: 75%`}></div>
                      </div>
                    </div>
                    <div class="skill-item">
                      <div class="skill-name">Node.js</div>
                      <div class="skill-level">
                        <div class="skill-bar" style={`width: 70%`}></div>
                      </div>
                    </div>
                    <div class="skill-item">
                      <div class="skill-name">Python</div>
                      <div class="skill-level">
                        <div class="skill-bar" style={`width: 65%`}></div>
                      </div>
                    </div>
                  </>
                )}
              </div>
            </div>

            <div class="about-social">
              <h3>联系方式</h3>
              <div class="social-links">
                {profileConfig.email && (
                  <a href={`mailto:${profileConfig.email}`} class="social-link">
                    <span class="social-icon">
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                      </svg>
                    </span>
                    <span class="social-name">Email</span>
                  </a>
                )}
                {profileConfig.github && (
                  <a href={profileConfig.github} target="_blank" rel="noopener noreferrer" class="social-link">
                    <span class="social-icon">
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                      </svg>
                    </span>
                    <span class="social-name">GitHub</span>
                  </a>
                )}
                {profileConfig.socialLinks && profileConfig.socialLinks.length > 0 && 
                  profileConfig.socialLinks.map((social, index) => (
                    <a href={social.url} target="_blank" rel="noopener noreferrer" class="social-link" key={index}>
                      <span class="social-icon">
                        {social.icon === 'github' && (
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                          </svg>
                        )}
                        {social.icon === 'twitter' && (
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
                          </svg>
                        )}
                        {social.icon === 'email' && (
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                            <polyline points="22,6 12,13 2,6"></polyline>
                          </svg>
                        )}
                        {social.icon === 'weibo' && (
                          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
                          </svg>
                        )}
                      </span>
                      <span class="social-name">{social.name}</span>
                    </a>
                  ))
                }
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- 关于页面样式 -->
  <style is:global>{aboutCSS}</style>
</Layout>